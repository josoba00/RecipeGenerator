### Create recipe (POST)
POST http://localhost:8080/api/recipes
Content-Type: application/json

{
  "name": "Spaghetti Bolognese",
  "timeInSeconds": 1800,
  "portion": 4,
  "ingredients": [
    { "unit": "g", "amount": 400, "name": "Spaghetti" },
    { "unit": "g", "amount": 300, "name": "Hackfleisch" },
    { "unit": "Stück", "amount": 1, "name": "Zwiebel" }
  ],
  "instructions": [
    { "order": 1, "step": "Wasser zum Kochen bringen." },
    { "order": 2, "step": "Spaghetti nach Packungsanweisung kochen." },
    { "order": 3, "step": "Hackfleisch und Zwiebel anbraten, Sauce zubereiten." }
  ],
  "notes": "Klassisches Familienrezept."
}

### Get all recipes (GET)
GET http://localhost:8080/api/recipes
Accept: application/json

### Get single recipe by id (GET)
GET http://localhost:8080/api/recipes/0
Accept: application/json

### Update recipe (PUT)
PUT http://localhost:8080/api/recipes/0
Content-Type: application/json

{
  "name": "Spaghetti Bolognese schnell",
  "timeInSeconds": 1800,
  "portion": 4,
  "ingredients": [
    { "unit": "g", "amount": 400, "name": "Spaghetti" },
    { "unit": "g", "amount": 300, "name": "Hackfleisch" },
    { "unit": "Stück", "amount": 1, "name": "Zwiebel" }
  ],
  "instructions": [
    { "order": 1, "step": "Wasser zum Kochen bringen." },
    { "order": 2, "step": "Spaghetti nach Packungsanweisung kochen." },
    { "order": 3, "step": "Hackfleisch und Zwiebel anbraten, Sauce zubereiten." }
  ],
  "notes": "schmeckt gut"
}

### Delete recipe (DELETE)
DELETE http://localhost:8080/api/recipes/0

### Error case: get unknown id (404)
GET http://localhost:8080/api/recipes/999
Accept: application/json

### Error case: invalid recipe (400 - portion <= 0)
POST http://localhost:8080/api/recipes
Content-Type: application/json

{
  "name": "Fehlerhaftes Rezept",
  "timeInSeconds": 600,
  "portion": 0,
  "ingredients": [
    { "unit": "g", "amount": 100, "name": "Test" }
  ],
  "instructions": [
    { "order": 1, "step": "Test" }
  ],
  "notes": ""
}
